{% extends 'base.html.twig' %}

{% block body %}
    <div class="banniere">
        <img src="{{ asset('images/banniere2.png') }}" alt="homme_noir" />
    </div>

    <div class="phrase">
        <p class="text-center_phrase">Je veux être
        {% for etre in event.etres %}
        {{ etre.label }},
        {% endfor %}
        et
        {{ event.espace }}
        à
        {{ event.ville }}</p>
    </div>
    <h1><span> Details de votre sortie</span></h1>
    <div class="container">
    <div class="regles">
        <div class="col-xs-12">
            <div class="thumbnail_monResultat">
                <div class="caption">
                    <h3 class="text-center">{{ event.titre }}</h3>
                    <p class="text-center">{{ event.description }}</p>
                    <p class="text-center">{{ event.descriptionComplementaire }}</p>
                    <p class="horaire">{{ event.horaire }}</p>
                    <p class="text-center">{{ event.lieu }}</p>
                    <p class="text-center">{{ event.adresse }}</p>
                    <p class="text-center">{{ event.cp }}</p>
                    <p class="text-center">{{ event.ville }}</p>
                    <p class="text-center participants">Nombre de participants : {{ event.nbParticipants }}</p>
                    {% if app.request.method == "GET" %}
                        <form method="post">
                            <input class ="btn center-block" name="participer" value="J'y participe !" type="submit"></td>
                        </form>
                    {% endif %}
                    {% for message in app.flashes('notice') %}
                        <div class="flash-notice">
                            {{ message }}
                                </div>
                        {% endfor %}
                    </div>

                </div>
            </div>
        </div>
        <p><a href="{{ path('homepage') }}" class="text-right" role="button">Retour à l'accueil</a></p>
    </div>


{% endblock %}
