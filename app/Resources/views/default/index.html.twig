{% extends 'base.html.twig' %}

{% block body %}
    <div class="banniere">
        <img src="{{ asset('images/banniere.png') }}" alt="homme_noir" />

    </div>
    <div class="container-fluid">


        <h1><span> Le principe est simple</span></h1>
        <h2>Trois règles à suivre :</h2>

            <div class="row regles">
                <div class="col-xs-4 text-center ">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3 class="text-center">Règle n°1</h3>
                            <p class="text-center">Choisissez votre<br> humeur</p>
                            <img src="{{ asset('images/humeur.jpg') }}" class="img-circle">
                        </div>
                    </div>
                </div>
                <div class="col-xs-4 text-center">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3 class="text-center">Règle n°2</h3>
                            <p class="text-center">Choisissez votre<br> environnement</p>
                            <img src="{{ asset('images/inout.jpg') }}" class="img-circle">
                        </div>
                    </div>
                </div>
                <div class="col-xs-4 text-center">
                    <div class="thumbnail">
                        <div class="caption">
                            <h3 class="text-center">Règle n°3</h3>
                            <p class="text-center">Choisissez votre<br> lieu</p>
                            <img src="{{ asset('images/ville.jpg') }}" class="img-circle">
                        </div>
                    </div>
                </div>
            </div>

        <div class=intro>


            <h2 class="choix">Il ne reste plus qu'à faire votre choix !!!</h2>


            <div class="form">
                <div class="container bot_form">
                    <div class="row">
                        {{ form_start(form) }}
                        <div class="col-xs-4">
                            <p>JE VEUX ÊTRE {{ form_widget(form.etre) }}{{ form_errors(form.etre) }}</p>
                        </div>
                        <div class="col-xs-4">
                            <p>ET {{ form_widget(form.espace) }} {{ form_errors(form.espace) }}</p>
                        </div>
                        <div class="col-xs-4">
                            <p>À {{ form_widget(form.ville) }}{{ form_errors(form.ville) }}</p>
                        </div>
                    </div>
                    <div class="form-group-save">
                        {{ form_label(form.save) }}
                        </br>
                        {{ form_widget(form.save) }}
                    </div>
                </div>
            </div>
    </div>



{% endblock %}
